/* pages/work/work.wxss */
view {
    box-sizing: border-box;
}

.work-wrapper {
    position: relative;
    width: 100vw;
    height: 100vh;
    background-color: rgb(243, 243, 243);
}

.timer-wrapper {
    position: relative;
    width: 400rpx;
    height: 400rpx;
    margin: 0 auto;
    top: 200rpx;
}

.timer-border {
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 50%;
    border: 2px solid #4a4a4a;
    width: 100%;
    height: 100%;
}

.timer-mask {
    position: absolute;
    left: 0;
    width: 110%;
    height: 110%;
    background-color: rgb(243, 243, 243);
}

.timer-content {
    position: absolute;
    border-radius: 50%;
    background-color: #15ABFF;
    left: 7rpx;
    top: 7rpx;
    width: 390rpx;
    height: 390rpx;
}

.timer-text {
    position: absolute;
    width: 100%;
    top: 450rpx;
    font-size: 50rpx;
    text-align: center;
    color: #4a4a4a;
}

.timer-status {
    position: absolute;
    width: 100%;
    top: 560rpx;
    font-size: 60rpx;
    text-align: center;
    color: #15ABFF;
}

.operate-wrapper {
    position: fixed;
    bottom: 50rpx;
    width: 100%;
}

.done button {
    background-color: #15ABFF;
    color: white;
}